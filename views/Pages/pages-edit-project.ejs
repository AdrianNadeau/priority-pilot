                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                       
                      </div>
                      <div class="form-group">
                       
                        <label for="phase">Phase:</label>
                        <select name ="phase_id_fk" id = "phase_id_fk">
                          <% phases.forEach(function(phase){ %>
                            <% if (phase.phase_name == project.phase_name){ %>
