            <strong>Tags:</strong> 
            <% if (tags) { %>
             <%= tags.join(', ') %>
            <% } %>
            <br/>
            
            <strong>Reference:</strong>
            <% if (project[0].reference) { %>
              
              <a href="<%= project[0].reference %>" target="_blank"><%= project[0].reference %></a>
            <% } else { %>
