            <circle cx="7" cy="7" r="6" fill="yellow" stroke="#ccc" stroke-width="1"/>
          </svg>
        <% } else if (healthStatus === 'red') { %>
          <svg width="14" height="14" style="vertical-align:middle; margin-right:6px;">
            <circle cx="7" cy="7" r="6" fill="red" />
          </svg>
        <% } %>
