<%- contentFor('HeaderCss') %>

<script src="frappe-gantt.min.js"></script>
<%- contentFor('breadcrumb') %>

<div class="row">
    <div class="col-md-4">
        <button type="button" class="button-menu-mobile open-left waves-effect">
            <i class="ion-navicon"></i>
        </button>
        <h3 class="page-title">In-Flight Health</h3>
    </div>
    <% include ../Partials/portfolio_name %>
    <div class="col-md-4 text-right">
        <!-- Add any additional content here -->
    </div>
</div>
<%- contentFor('body') %>
<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <button type="button" class="btn btn-primary waves-effect waves-light" id="btnExportHealth">Download Report</button> 
            <div class="col-lg-12 text-center">
                <div class="card-body" style="border:0px !important;">
                    
                    <div class="table-responsive">
                        <table class="table mb-12">
                            <thead>
                                <tr>
                                    <th>Project</th>
                                    <th>Start</th>
                                    <th>End</th>
                                    <th>NMS</th>
                                    <th>Prime</th>
                                    <th>Sponsor</th>
                                    <td>Issues</td>
                                    <td>Actions</td>
                                    <th>Progress</th>
                                   
                                   
                                </tr>
                            </thead>
                            <tbody>
                                <% let currentPhase = ''; %>
                                <% projects.forEach(project => { %>
                                    <% if (project.phase_name === 'Planning' || project.phase_name === 'Delivery' || project.phase_name === 'Discovery') { %>
                                    <% if (project.phase_name !== currentPhase) { %>
                                        <% currentPhase = project.phase_name; %>
                                        <tr>
                                        <td colspan="12" style="background-color:#ececec;font-weight: bold; text-align: center;"><%= currentPhase %></td>
                                        </tr>
                                    <% } %>
                                   
                                    <% 
                                         let backgroundColor = '#CCC'; 
                                         let progressColor = '#CCC'; 
                                    %>
                                    <% if (project.health && project.health.toLowerCase().trim() === 'yellow') { %>
                                      <% backgroundColor = '#FFFF00'; 
                                        progressColor = '#FFFF00'; 
                                    %>

                                    <% } else if (project.health && project.health.toLowerCase().trim() === 'green') { %>
                                      <% backgroundColor = '#00FF00'; %> <!-- Green color -->
                                      
                                    <% } else if (project.health && project.health.toLowerCase().trim() === 'red') { %>
                                      <% backgroundColor = '#FF0000'; %> <!-- Red color -->
                                    <% } %>
                                    <tr>

                                        <td style="background-color:<%= backgroundColor %>;color:black;font-weight: bold;">
                                            <%= project.project_name %>&nbsp;<a href="/projects/edit/<%= project.project_id %>"><i class="mdi mdi-border-color"></i></a>
                                        </td>
                                        <td><% if (project.start_date) { %><%= new Date(project.start_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %><% } %></td>
                                        <td><% if (project.end_date) { %><%= new Date(project.end_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %><% } %></td>
                                        <td><% if (project.next_milestone_date) { %><%= new Date(project.next_milestone_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %><% } %></td>
                                        <td><%= project.prime_first_name %> <%= project.prime_last_name %></td>
                                        <td><%= project.sponsor_first_name %> <%= project.sponsor_last_name %></td>
                                        <td><% if (project.last_status) { %><%= project.last_status.issue %><% } %></td>
                                        <td><% if (project.last_status) { %><%= project.last_status.actions %><% } %></td>
                                        <td><% if (project.last_status) { %><%= project.last_status.progress %> %<% } %></td>
                                    </tr>
                                    <% } %>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- contentFor('FooterJs') %>
<%- contentFor('BottomJs') %>
<script>
    document.getElementById("btnExportHealth").addEventListener("click", function () {
      // Get the projects data from the table
      const rows = [];
      const tableRows = document.querySelectorAll("table tbody tr");
  
      let currentPhase = ""; // Track the current phase
  
      tableRows.forEach((row) => {
        const cells = row.querySelectorAll("td");
  
        // Check if the row is a phase header
        if (cells.length === 1 && cells[0].colSpan === 12) {
          currentPhase = cells[0]?.innerText.trim() || "N/A"; // Update the current phase
          rows.push({ Phase: currentPhase }); // Add the phase as a row
        } else if (cells.length > 0) {
          // Add project data
          rows.push({
            Phase: currentPhase,
            Project: cells[0]?.innerText.trim() || "N/A",
            "Start Date": cells[1]?.innerText.trim() || "N/A",
            "End Date": cells[2]?.innerText.trim() || "N/A",
            "Next Milestone Date": cells[3]?.innerText.trim() || "N/A",
            Prime: cells[4]?.innerText.trim() || "N/A",
            Sponsor: cells[5]?.innerText.trim() || "N/A",
            Issues: cells[6]?.innerText.trim() || "N/A",
            Actions: cells[7]?.innerText.trim() || "N/A",
            Progress: cells[8]?.innerText.trim() || "N/A",
          });
        }
      });
  
      // Convert rows to CSV
      const csvRows = [];
      const headers = [
        "Phase",
        "Project",
        "Start Date",
        "End Date",
        "Next Milestone Date",
        "Prime",
        "Sponsor",
        "Issues",
        "Actions",
        "Progress",
      ];
      csvRows.push(headers.join(",")); // Add headers
  
      rows.forEach((row) => {
        const values = headers.map((header) => `"${row[header] || ""}"`);
        csvRows.push(values.join(","));
      });
  
      const csvContent = csvRows.join("\n");
  
      // Create a downloadable link
      const blob = new Blob([csvContent], { type: "text/csv" });
      const url = window.URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.style.display = "none";
      a.href = url;
      const today = new Date();
      const formattedDate = `${today.getFullYear()}-${String(today.getDate()).padStart(2, "0")}-${String(today.getMonth() + 1).padStart(2, "0")}`;
      a.download = `health-data-${formattedDate}.csv`;
      document.body.appendChild(a);
      a.click();
      window.URL.revokeObjectURL(url);
    });
  </script>