  #tag2Chart,
  #tag3Chart {
    cursor: pointer;
  }
  @media print {
    /* Hide buttons and other unnecessary elements */
    #btnPrintPage,
    #btnExportHealth,
    .page-title,
    .portfolio-title,
    .button-menu-mobile {
      display: none;
    }

