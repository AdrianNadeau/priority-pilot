<script>
  function loadProject(project_id) {
    window.location.replace('/projects/cockpit/' + project_id);
  }
  function loadFunnel() {
    window.location.replace('/projects/funnel/view/');
  }
  function loadFreezer() {
    window.location.replace('/projects/freezer/view/');
  }
  function loadRadar() {
   
    window.location.replace('/projects/radar/view/');
  }
  function loadHealth() {
   
    window.location.replace('/projects/health/view/');
  }
  function loadFlightPlan() {
    window.location.replace('/projects/flight/view/');
  }
  function loadFlightFull() {
    
    window.location.replace('/projects/flightview/view/');
  }
 
  function getProjects() {
    window.location.replace('/projects/');
  }

</script>