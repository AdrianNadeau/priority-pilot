        if (input.includes('.')) {
            const parts = input.split('.');
            parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ','); // Add commas to the integer part
            input = parts.join('.');
        } else {
            input = input.replace(/\B(?=(\d{3})+(?!\d))/g, ','); // Add commas if no decimal part
        }

        projectCost.value = input;
